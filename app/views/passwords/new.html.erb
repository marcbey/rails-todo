<div class="mx-auto max-w-md rounded-3xl border border-slate-800 bg-slate-900/60 p-8 shadow-lg">
  <h1 class="text-2xl font-semibold">Reset your password</h1>
  <p class="mt-1 text-sm text-slate-400">We will email you a link to reset it.</p>

  <%= form_with url: passwords_path, class: "mt-6 space-y-4" do |form| %>
    <div>
      <%= form.label :email_address, "Email", class: "text-xs font-semibold uppercase tracking-wide text-slate-400" %>
      <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "you@company.com", value: params[:email_address], class: "mt-2 w-full rounded-2xl border border-slate-700 bg-slate-950/60 px-3 py-2 text-sm text-slate-100 focus:border-slate-500 focus:outline-none" %>
    </div>

    <%= form.submit "Email reset instructions", class: "rounded-2xl bg-slate-100 px-4 py-2 text-sm font-semibold text-slate-950 hover:bg-white" %>
  <% end %>
</div>
