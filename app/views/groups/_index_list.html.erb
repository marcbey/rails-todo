<% if groups.any? %>
  <% groups.each do |group| %>
    <%= link_to group_path(group), class: "flex items-center justify-between rounded-2xl border border-slate-800/80 bg-slate-950/60 px-4 py-3 text-sm hover:border-slate-600 hover:text-white" do %>
      <span class="font-medium"><%= group.name %></span>
      <span class="text-xs text-slate-500">Open</span>
    <% end %>
  <% end %>
<% else %>
  <div class="rounded-2xl border border-dashed border-slate-700 px-4 py-6 text-center text-sm text-slate-400">
    You are not in any groups yet.
  </div>
<% end %>
