<div id="<%= dom_id(message) %>" class="rounded-2xl border border-slate-800/70 bg-slate-950/60 p-4">
  <div class="flex items-center justify-between text-xs text-slate-400">
    <span class="font-semibold text-slate-200"><%= message.user.email_address %></span>
    <span><%= l(message.created_at, format: :short) %></span>
  </div>

  <% if message.body.present? %>
    <div class="mt-2 text-sm text-slate-100"><%= simple_format(message.body, class: "leading-relaxed") %></div>
  <% end %>

  <% if message.files.attached? %>
    <div class="mt-3 space-y-2">
      <% message.files.each do |file| %>
        <div class="flex items-center justify-between rounded-xl border border-slate-800 bg-slate-900/60 px-3 py-2 text-xs">
          <span class="truncate"><%= file.filename %></span>
          <%= link_to "Download", url_for(file), class: "text-slate-200 hover:text-white" %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
