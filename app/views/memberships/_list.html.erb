<% if memberships.any? %>
  <% memberships.each do |membership| %>
    <div class="flex items-center justify-between rounded-2xl border border-slate-800 bg-slate-950/60 px-3 py-2 text-xs">
      <div>
        <div class="font-semibold text-slate-100"><%= membership.user.email_address %></div>
        <div class="text-[10px] uppercase tracking-wide text-slate-500"><%= membership.role %></div>
      </div>
      <% if group.memberships.find_by(user: current_user)&.role_owner? && !membership.role_owner? %>
        <%= button_to "Remove", group_membership_path(group, membership), method: :delete, class: "rounded-full border border-slate-700 px-2 py-1 text-[10px] font-semibold uppercase tracking-wide text-slate-300 hover:text-white" %>
      <% end %>
    </div>
  <% end %>
<% else %>
  <div class="rounded-2xl border border-dashed border-slate-800 px-3 py-4 text-center text-xs text-slate-400">No members yet.</div>
<% end %>
