<% content_for :title, "Sign up" %>

<div class="mx-auto max-w-md rounded-3xl border border-slate-800 bg-slate-900/60 p-8 shadow-lg">
  <h1 class="text-2xl font-semibold">Create your account</h1>
  <p class="mt-1 text-sm text-slate-400">Join a group to start chatting.</p>

  <%= form_with model: @user, class: "mt-6 space-y-4" do |form| %>
    <% if @user.errors.any? %>
      <div class="rounded-2xl border border-rose-500/40 bg-rose-500/10 px-4 py-3 text-sm text-rose-200">
        <%= @user.errors.full_messages.to_sentence %>
      </div>
    <% end %>

    <div>
      <%= form.label :email_address, "Email", class: "text-xs font-semibold uppercase tracking-wide text-slate-400" %>
      <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "you@company.com", class: "mt-2 w-full rounded-2xl border border-slate-700 bg-slate-950/60 px-3 py-2 text-sm text-slate-100 focus:border-slate-500 focus:outline-none" %>
    </div>

    <div>
      <%= form.label :password, "Password", class: "text-xs font-semibold uppercase tracking-wide text-slate-400" %>
      <%= form.password_field :password, required: true, autocomplete: "new-password", placeholder: "Create a password", maxlength: 72, class: "mt-2 w-full rounded-2xl border border-slate-700 bg-slate-950/60 px-3 py-2 text-sm text-slate-100 focus:border-slate-500 focus:outline-none" %>
    </div>

    <div>
      <%= form.label :password_confirmation, "Confirm password", class: "text-xs font-semibold uppercase tracking-wide text-slate-400" %>
      <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Repeat password", maxlength: 72, class: "mt-2 w-full rounded-2xl border border-slate-700 bg-slate-950/60 px-3 py-2 text-sm text-slate-100 focus:border-slate-500 focus:outline-none" %>
    </div>

    <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
      <%= form.submit "Create account", class: "rounded-2xl bg-slate-100 px-4 py-2 text-sm font-semibold text-slate-950 hover:bg-white" %>
      <%= link_to "Already have an account?", new_session_path, class: "text-xs font-semibold uppercase tracking-wide text-slate-400 hover:text-white" %>
    </div>
  <% end %>
</div>
