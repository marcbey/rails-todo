<div class="mx-auto max-w-md rounded-3xl border border-slate-800 bg-slate-900/60 p-8 shadow-lg">
  <h1 class="text-2xl font-semibold">Sign in</h1>
  <p class="mt-1 text-sm text-slate-400">Welcome back. Pick up where your team left off.</p>

  <%= form_with url: session_url, class: "mt-6 space-y-4" do |form| %>
    <div>
      <%= form.label :email_address, "Email", class: "text-xs font-semibold uppercase tracking-wide text-slate-400" %>
      <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "you@company.com", value: params[:email_address], class: "mt-2 w-full rounded-2xl border border-slate-700 bg-slate-950/60 px-3 py-2 text-sm text-slate-100 focus:border-slate-500 focus:outline-none" %>
    </div>

    <div>
      <%= form.label :password, "Password", class: "text-xs font-semibold uppercase tracking-wide text-slate-400" %>
      <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Your password", maxlength: 72, class: "mt-2 w-full rounded-2xl border border-slate-700 bg-slate-950/60 px-3 py-2 text-sm text-slate-100 focus:border-slate-500 focus:outline-none" %>
    </div>

    <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
      <%= form.submit "Sign in", class: "rounded-2xl bg-slate-100 px-4 py-2 text-sm font-semibold text-slate-950 hover:bg-white" %>
      <div class="flex flex-col gap-2 text-xs font-semibold uppercase tracking-wide text-slate-400 sm:text-right">
        <%= link_to "Forgot password?", new_password_path, class: "hover:text-white" %>
        <%= link_to "Create account", new_user_path, class: "hover:text-white" %>
      </div>
    </div>
  <% end %>
</div>
